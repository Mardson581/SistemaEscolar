@model IEnumerable<SistemaEscolar.Models.Aluno>;

<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Ferramenta META Consultoria Educacional</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/listaAlunos.css">

</head>
<body>

  <dusing SistemaEscolar.Models;
#line default
<!-- Top bar -->
    <div class="d-flex justify-content-between align-items-start mb-3 flex-wrap">
      <div class="logo">
        <h1>LOGO</h1>
        <h2>META</h2>
        <p>CONSULTORIA EDUCACIONAL</p>
      </div>
      <h4 class="text-center flex-grow-1 mt-2 fw-bold" style="color:#3b3b3b;">BARIRI - E.M JO√ÉO GON√áALVES</h4>
      <div class="exit-icon ms-auto mt-2">&#x21B7;</div>
    </div>

    <!-- Navigation tabs -->
    <ul class="nav nav-tabs nav-tabs-custom justify-content-center mb-3" id="navTabs">
      <li class="nav-item">
        <a class="nav-link" href="#">DIRETOR</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="#">ALUNOS</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">PROFESSORES</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">TURMAS</a>
      </li>
    </ul>

    <!-- Search and content -->
    <div class="content-box">
      <!-- Search -->
      <div class="row g-2 align-items-center mb-4">
        <div class="col-12 col-md-2">
          <label for="search" class="form-label fw-bold text-white">Pesquisa:</label>
        </div>
        <div class="col-12 col-md-10 d-flex align-items-center">
          <input type="text" class="form-control w-100" id="search" placeholder="Digite o nome...">
          <span class="search-icon-outside">üîç</span>
        </div>
      </div>

      <!-- Title -->
      <h5 class="text-center fw-bold mb-3">Alunos</h5>

      <!-- Professores list -->
      @foreach (var aluno in Model)
      {
          <a href="/aluno/cadastrar/@aluno.IdAluno" class="list-link">@aluno.Nome</a>
      }
    </div>
  </div>

  <!-- JavaScript to handle active tab -->
  <script src="/js/listaAlunos.js"></script>

</body>
</html>
