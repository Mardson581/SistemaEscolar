<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Ferramenta META Consultoria Educacional</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
  @RenderSection("CSS", required: true)
</head>
<body>

  <div class="container">
    <!-- Top bar -->
    <div class="d-flex justify-content-center align-items-center mb-3 flex-wrap">
      <div class="logo">
        <img src="/images/logo.png" alt="GED">
      </div>
      
      @if (ViewBag.Title != null) {
        <h4 class="text-center mt-2 fw-bold" style="color:#3b3b3b;">@ViewBag.Title</h4>
      }
    </div>

    <!-- É aqui que entra o conteúdo da View -->
    @RenderBody()

  </div> <!-- fim container -->

  @RenderSection("Scripts", required: false)

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
