<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ferramenta META Consultoria Educacional</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    @RenderSection("CSS", required: true)

</head>

<body>
    <div class="container">
        <!-- Top bar -->
        <div class="d-flex justify-content-center align-items-center mb-3 flex-wrap">
            <div class="logo">
                <img src="/images/logo.png" alt="GED">
            </div>
            <h4 class="text-center mt-2 fw-bold" style="color:#3b3b3b;">@ViewBag.NomeEscola</h4>
        </div>

        <!-- Navigation tabs -->
        <ul class="nav nav-tabs nav-tabs-custom justify-content-center mb-3" id="navTabs">
            <li class="nav-item">
                <a class="nav-link" href="@ViewBag.UrlBase/diretor/">DIRETOR</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@ViewBag.UrlBase/aluno">ALUNOS</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@ViewBag.UrlBase/professor/">PROFESSORES</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@ViewBag.UrlBase/turma/">TURMAS</a>
            </li>
        </ul>

        <!-- Search and content -->
        <div class="content-box">
            <!-- Search -->
            <div class="row g-2 align-items-center mb-4">
                <div class="col-12 col-md-2">
                    <label for="search" class="form-label fw-bold text-white">Pesquisa:</label>
                </div>
                <form class="col-12 col-md-10 d-flex align-items-center" method="GET" id="searchForm">
                    <input type="text" class="form-control w-100" name="search" id="search"
                        placeholder="Digite o nome...">
                    <span onclick="search()" class="search-icon-outside">üîç</span>
                </form>
            </div>

            <!-- Title -->
            <h5 class="text-center fw-bold mb-3">@ViewBag.Title</h5>

            <!-- A listagem dos dados vem aqui -->
            @RenderBody()

            <div class="fixed-bottom d-flex container flex-row"
                style="gap: 10px; max-width: 100vw; align-items: center; justify-content: center; padding: 10px">
                <a href="/municipio/@ViewBag.Escola.MunicipioId/escola/editar/@ViewBag.Escola.IdEscola"
                    class="btn btn-warning">EDITAR CADASTRO DA ESCOLA</a>
                @RenderSection("Buttons", required: false)
                <div class="icon-exit"></div>
                <a href="/logout" style="text-decoration: none; color: #003377;" title="Sair da conta">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                        class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0z" />
                        <path fill-rule="evenodd"
                            d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
    </div>

    @RenderSection("Scripts", required: false)

    <!-- Script para deixar a tab certa ativa -->
    <script>
        function search() {
            let searchForm = document.getElementById("searchForm");
            searchForm.submit();
        }
        let menuTabs = document.getElementsByClassName("nav-link");

        Object.values(menuTabs).forEach((t) => {
            if (t.innerHTML.toUpperCase() == "@ViewBag.Title.ToUpper()") {
                t.classList.add("active");
            }
        })
    </script>

</body>

</html>
