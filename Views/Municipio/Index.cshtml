@model List<SistemaEscolar.Models.Municipio>
<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Ferramenta META Consultoria Educacional</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/municipio.css">

</head>

<body>

  <div class="container">
    <div class="topbar">
      <div class="logo">
        <img src="/images/logo.png" alt="GED">
      </div>
      <h3 class="text-center flex-grow-1">Escolha o munic√≠pio que deseja administrar</h3>
      <div class="icon-exit">&#x21B7;</div>
    </div>
    <div class="row g-4">
    @if (Model != null)
    {
      foreach (var municipio in Model)
      {
        
          <div class="col-12 col-sm-6 col-md-4">
            <a href="/municipio/@municipio.IdMunicipio" class="card-municipio">
              <div class="card-top">@municipio.Nome</div>
              <div class="card-bottom">@municipio.Escolas.Count()</div>
            </a>
          </div>
      }
    }
    </div>
  </div>
  </div>
  <script src="./js/municipio.js"></script>

</body>

</html>
