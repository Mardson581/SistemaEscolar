@model List<SistemaEscolar.Models.Municipio>
<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Ferramenta META Consultoria Educacional</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/municipio.css">

</head>

<body>
  <div class="container">
    <div class="topbar">
      <div class="logo">
        <img src="/images/logo.png" alt="GED">
      </div>
      <h3 class="text-center flex-grow-1">Escolha o município que deseja administrar</h3>
      <div class="icon-exit">
        <a href="/logout" style="text-decoration: none; color: #003377;">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
            class="bi bi-box-arrow-right" viewBox="0 0 16 16">
            <path fill-rule="evenodd"
              d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0z" />
            <path fill-rule="evenodd"
              d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z" />
          </svg>
        </a>
      </div>
    </div>
    <div class="row g-4">
      @if (Model != null)
      {
        foreach (var municipio in Model)
        {

          <div class="col-12 col-sm-6 col-md-4">
            <a href="/municipio/detalhes/@municipio.IdMunicipio" class="card-municipio">
              <div class="card-top">@municipio.Nome</div>
              <div class="card-bottom">@municipio.Escolas.Count()</div>
            </a>
          </div>
        }
      }
    </div>
  </div>
  </div>

  <a style="max-width: fit-content; padding: 10px" href="/municipio/cadastrar"
    class="fixed-bottom start-50 left-50 translate-middle btn btn-primary">CADASTRAR NOVO MUNICÍPIO</a>
  <script src="./js/municipio.js"></script>

</body>

</html>
