@model IEnumerable<SistemaEscolar.Models.Turma>;
@{
    Layout = "~/Views/Shared/_ListarLayout.cshtml";
}

@section CSS {
    <link rel="stylesheet" href="/css/listaTodasTurmas.css">
}

@foreach (var turma in Model)
{
  <a href="@ViewBag.UrlBase/turma/editar/@turma.IdTurma" class="list-link">@turma.Nome</a>
}

@if (Model.Count() == 0)
{
  <p style="text-align: center">Nenhuma turma foi cadastrada ainda!</p>
}

@section Buttons {
    <a href="@ViewBag.UrlBase/turma/cadastrar" class="btn btn-info">CADASTRAR TURMA</a>
}